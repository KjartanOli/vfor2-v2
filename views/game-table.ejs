<table>
	<thead>
		<tr>
			<th>Dagsetning</th>
			<th>Heima lið</th>
			<th>Heima lið skor</th>
			<th>Útilið</th>
			<th>Útilið skor</th>
			<% if (admin) { %>
				<th>Breyta</th>
			<% } %>
		</tr>
	</thead>
	<tbody>
		<% for (const game of games) { %>
			<tr>
				<td><%= game.date.toDateString() %></td>
				<td><%= game.home.name %></td>
				<td><%= game.home.score %></td>
				<td><%= game.away.name %></td>
				<td><%= game.away.score %></td>
				<% if (admin) { %>
					<td><a href="<%= `/admin/edit/${game.id}` %>">Breyta</a></td>
				<% } %>
			</tr>
		<% } %>
	</tbody>
</table>
